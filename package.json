{
  "name": "realtime-identifica-itinerario",
  "version": "0.0.0",
  "description": "//",
  "main": "src/main.ts",
  "scripts": {
    "clean": "rm -R node_modules",
    "rabbitmq": "docker run -d --hostname rabbitMQ --name rabbitmq-srv -p 5672:5672 -p 8080:15672 rabbitmq:3-management",
    "stop:rabbitmq": "docker stop rabbitmq-srv && docker rm rabbitmq-srv",
    "stop:all": "docker stop $(docker ps -q -a) && docker rm $(docker ps -q -a)",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "commit": "git-cz",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Mateus Garcia",
  "license": "ISC",
  "devDependencies": {
    "@types/amqplib": "^0.5.11",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^11.13.4",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "rimraf": "^2.6.3",
    "standard-version": "^5.0.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.4.3",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "@types/mssql": "^4.0.13",
    "@types/request-promise": "^4.1.43",
    "amqplib": "^0.5.3",
    "bluebird": "^3.5.4",
    "dotenv": "^7.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg"
    }
  }
}